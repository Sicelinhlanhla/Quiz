@model IEnumerable<Abantwana_DayCare.Models.Quiz>

@{
	if(User.IsInRole("Admin"))
	{
 Layout = "~/Views/Shared/_Dashboard.cshtml";
	}
}


@foreach (var item in Model)
{
	<div class="container-fluid bg-info">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h3><span class="label label-warning" id="qid"> Question @Html.DisplayFor(modelItem => item.Quiz_ID):</span> @Html.DisplayFor(modelItem => item.Question)</h3>
				</div>
				<div class="modal-body">
					<div class="col-xs-3 col-xs-offset-5">
						<div id="loadbar" style="display: none;">
							<div class="blockG" id="rotateG_01"></div>
							<div class="blockG" id="rotateG_02"></div>
							<div class="blockG" id="rotateG_03"></div>
							<div class="blockG" id="rotateG_04"></div>
							<div class="blockG" id="rotateG_05"></div>
							<div class="blockG" id="rotateG_06"></div>
							<div class="blockG" id="rotateG_07"></div>
							<div class="blockG" id="rotateG_08"></div>
						</div>
					</div>
					<div class="quiz" id="quiz" data-toggle="buttons">
						<label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value="1">@Html.DisplayFor(modelItem => item.A)</label>
						<label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value="2">@Html.DisplayFor(modelItem => item.B)</label>
						<label class="element-animation3 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value="3">@Html.DisplayFor(modelItem => item.C)</label>
						<label class="element-animation4 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value="4">@Html.DisplayFor(modelItem => item.D)</label>
					</div>
				</div>
				<div class="modal-footer text-muted">
					<span id="answer"></span>
				</div>
			</div>
		</div>
	</div>
}


<script src="~/Content/choice.js"></script>