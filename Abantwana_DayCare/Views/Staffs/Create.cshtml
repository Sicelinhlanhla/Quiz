@model Abantwana_DayCare.ViewModels.StaffCreateVM

@{

				ViewBag.Title = "Create";
				Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@using (Html.BeginForm("Create", "Staffs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()


	<h3 class="box-title">Person Info</h3>
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<hr class="m-t-0 m-b-40">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
			
				<div class="col-md-9">
					@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control",@placeholder="First Name" } })
					@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
				
				<div class="col-md-9">
					@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control",@placeholder="Last Name" } })
					@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
			
				<div class="col-md-9">
					@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control",@placeholder="Email Address"} })
					@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
				
				<div class="col-md-9">
					@Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control",@placeholder="phone number" } })
					@Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
		
				<div class="col-md-9">
					@Html.EditorFor(model => model.ID_Number, new { htmlAttributes = new { @class = "form-control",@placeholder="ID NUMBER" } })
					@Html.ValidationMessageFor(model => model.ID_Number, "", new { @class = "text-danger" })

				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
				
				<div class="col-md-9">
					@Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control",@placeholder="Address" } })
					@Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
		
				<div class="col-md-9">
					<input type="file" name="img_upload" accept=".jpeg,.jpg,.png" onchange="readURL(this);" class="form-control" required="required" />
					@Html.ValidationMessageFor(model => model.Picture, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
		
				<div class="col-md-9">
					@Html.EditorFor(model => model.qualification, new { htmlAttributes = new { @class = "form-control",@placeholder="Qualification" } })
					@Html.ValidationMessageFor(model => model.qualification, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">

				<div class="col-md-9">
					@Html.EditorFor(model => model.Number_Of_Work, new { htmlAttributes = new { @class = "form-control",@placeholder=" currrent Work Telephone" } })
					@Html.ValidationMessageFor(model => model.Number_Of_Work, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
			
				<div class="col-md-9">
					@Html.EditorFor(model => model.Previous_Company, new { htmlAttributes = new { @class = "form-control",@placeholder= "Previous company you worked with" } })
					@Html.ValidationMessageFor(model => model.Previous_Company, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>


	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
			
				<div class="col-md-9">
					@Html.EditorFor(model => model.Prev_CompanyPhone, new { htmlAttributes = new { @class = "form-control",@placeholder="Previous company phone number" } })
					@Html.ValidationMessageFor(model => model.Prev_CompanyPhone, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
			
			</div>
		</div>
		<!--/span-->
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group row">
				
				<div class="col-md-9">
					@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" ,@placeholder="Pass****"} })
					@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
		<div class="col-md-6">
			<div class="form-group row">
			
				<div class="col-md-9">
					@Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control ",@placeholder="Confirm Password" } })
					@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<!--/span-->
	</div>

	<div class="form-actions">
		<div class="row">
			<div class="col-md-6">
				<div class="row">
					<div class="col-md-offset-3 col-md-9">
						<button type="submit" class="btn btn-success">Submit</button>

						<a class="btn btn-inverse" href="@Url.Action("Index", "Staffs")">
							Back to List
						</a>
					</div>
				</div>
			</div>
			<div class="col-md-6"> </div>
		</div>
	</div>



}



@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
