@model IEnumerable<Abantwana_DayCare.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<br />
<div class=" row">
    <div class="col-lg-6">
    </div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
        <b>
            @using (Html.BeginForm("Index", "UsersAdmin", FormMethod.Get))
            {
                <b> search By:</b>
                @Html.RadioButton("SearchBy", "Email", true) <text>Email</text>

                @Html.TextBox("Search")<input type="submit" , value="Search" />

            }
    </div>
    <br />
</div>
<p style="text-decoration:none" class="btn btn-success btn-sm">
    @Html.ActionLink("ADD USER", "Create")
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
    

        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>

        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
          

            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
			<td>
				<a class="btn btn-success" href="@Url.Action("Edit", "UsersAdmin", new { id = item.Id })">
					<i class="fa fa-edit"></i>
				</a> |
				<a class="btn btn-success" href="@Url.Action("Details", "UsersAdmin", new { id = item.Id })">
					<i class="fa fa-info"></i>
				</a> |
				
			
			</td>
        </tr>
    }

</table>

