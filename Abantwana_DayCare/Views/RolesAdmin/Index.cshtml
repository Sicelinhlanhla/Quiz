@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="container col-lg-12">
    <br />
    <br />
    <p style="text-decoration:none" class="btn btn-success btn-sm">
        @Html.ActionLink("ADD Role", "Create")
    </p>
    <br />
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
				<td>

					<a class="btn btn-success" href="@Url.Action("Edit", "RolesAdmin", new { id = item.Id })">
						<i class="fa fa-edit"></i>
					</a> |
					<a class="btn btn-success" href="@Url.Action("Details", "RolesAdmin", new { id = item.Id })">
						<i class="fa fa-info"></i>
					</a> |
				
				</td>
            </tr>
        }
    </table>
